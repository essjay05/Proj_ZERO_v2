<!-- SIGN UP PAGE FORM TO RETRIEVE USER PROFILE DATA -->
<div class="signupHero">
    <div class="col-sm-6 offset-md-3 title">
        <h1 class="title top pt-4">Sign Up</h1>
        <form method="post" action="/users/signup">
            
            <div class="form-group signUp">
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="firstName">
            </div>
            <div class="form-group signUp">
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="lastName">
            </div>
            <div class="form-group signUp">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email (Your email will become your username)">
            </div>
            <div class="form-group signUp">
                <input type="password" class="form-control" id="password" name="password" placeholder="password">
            </div>
            
            <button type="submit" class="btn btn-primary signUp">Submit</button>
        </form>
        <hr>
        
        <p class="subtitle">Or, <a href="/users/login">Log In</a></p>
        <p class="subtitle">Go back <a href="/">home</a>.</p>
    </div>
</div>